<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-red-50 via-white to-red-50 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="container mx-auto p-6 max-w-5xl">
    <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg p-6">
      <!-- Header Section -->
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800"><%= editing ? "Edit" : "Register"%> Your Home</h1>
        <p class="text-sm text-gray-600 mt-1">Fill in the details about your property</p>
      </div>

      <form action="/host/<%= editing ? 'edit-home' : 'add-home'%>" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= editing ? home._id : ''%>" />
        
        <!-- Left Column -->
        <div class="space-y-4">
          <!-- House Name -->
          <div class="relative">
            <label class="text-gray-700 text-xs font-semibold mb-1 block">House Name</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-home text-gray-400 text-sm"></i>
              </div>
              <input
                type="text"
                name="houseName"
                value="<%= editing ? home.houseName : ''%>"
                placeholder="Enter your House Name"
                class="w-full pl-9 pr-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                required
              />
            </div>
          </div>

          <!-- Price -->
          <div class="relative">
            <label class="text-gray-700 text-xs font-semibold mb-1 block">Price Per Night</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-dollar-sign text-gray-400 text-sm"></i>
              </div>
              <input
                type="text"
                name="price"
                value="<%= editing ? home.price : ''%>"
                placeholder="Price Per Night"
                class="w-full pl-9 pr-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                required
              />
            </div>
          </div>

          <!-- Location -->
          <div class="relative">
            <label class="text-gray-700 text-xs font-semibold mb-1 block">Location</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-location-dot text-gray-400 text-sm"></i>
              </div>
              <input
                type="text"
                name="location"
                value="<%= editing ? home.location : ''%>"
                placeholder="Location"
                class="w-full pl-9 pr-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                required
              />
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-4">
          <!-- Rating -->
          <div class="relative">
            <label class="text-gray-700 text-xs font-semibold mb-1 block">Rating</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-star text-gray-400 text-sm"></i>
              </div>
              <input
                type="number"
                name="rating"
                value="<%= editing ? home.rating : ''%>"
                placeholder="Rating (1-5)"
                min="1"
                max="5"
                class="w-full pl-9 pr-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                required
              />
            </div>
          </div>

          <!-- Photo Upload -->
          <div class="relative">
            <label class="text-gray-700 text-xs font-semibold mb-1 block">Property Photo</label>
            <div class="relative group">
              <input
                type="file"
                name="photo"
                accept="image/jpg, image/jpeg, image/png"
                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100"
              />
            </div>
          </div>

          <!-- House Rules PDF Upload -->
          <div class="relative">
            <label class="text-gray-700 text-xs font-semibold mb-1 block">House Rules (PDF)</label>
            <div class="relative group">
              <input
                type="file"
                name="houseRules"
                accept=".pdf,application/pdf"
                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100"
              />
            </div>
          </div>
        </div>

        <!-- Full Width Description -->
        <div class="relative col-span-full">
          <label class="text-gray-700 text-xs font-semibold mb-1 block">Description</label>
          <div class="relative">
            <div class="absolute top-2 left-3 text-gray-400">
              <i class="fas fa-align-left text-sm"></i>
            </div>
            <textarea
              name="description"
              placeholder="Describe your home"
              class="w-full pl-9 pr-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 h-20"
              required
            ><%= editing ? home.description : ''%></textarea>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="col-span-full bg-gradient-to-r from-red-500 to-red-600 text-white py-2 rounded-md text-sm font-semibold hover:from-red-600 hover:to-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transform transition-all duration-200 hover:scale-[1.02]"
        >
          <span class="flex items-center justify-center">
            <%= editing ? "Update Home" : "Add Home" %>
            <i class="fas fa-arrow-right ml-2 text-sm group-hover:translate-x-1 transition-transform"></i>
          </span>
        </button>
      </form>
    </div>
  </main>
</body>
</html>