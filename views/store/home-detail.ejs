<%- include('../partials/head') %>
  </head>
  <body>
      <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-md rounded-lg p-4 mt-4 max-w-4xl">
          <h2 class="text-xl text-red-500 font-bold text-center mb-3">
             Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- Left Column: Image and Price -->
              <div class="space-y-3">
                  <div class="rounded-lg overflow-hidden">
                      <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-60 object-cover">
                  </div>
                  <div class="flex items-center justify-between px-2">
                      <p class="text-red-500 text-lg font-bold">â‚¹<%= home.price %> <span class="text-xs text-gray-500">/ night</span></p>
                      <div class="flex items-center bg-yellow-50 px-2 py-0.5 rounded-full">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-400 mr-1">
                              <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                          </svg>
                          <span class="text-gray-700 text-xs font-medium"><%= home.rating %>/5</span>
                      </div>
                  </div>
              </div>

              <!-- Right Column: Details -->
              <div class="space-y-3">
                  <!-- Location -->
                  <div class="flex items-start gap-2 border-b pb-2">
                      <i class="fas fa-map-marker-alt text-red-400 mt-1"></i>
                      <p class="text-gray-600 text-sm font-bold"><%= home.location %></p>
                  </div>

                  <!-- Description -->
                  <div class="border-b pb-2">
                      <p class="text-gray-600 text-sm font-semibold"><%= home.description %></p>
                  </div>

                  <!-- Actions -->
                  <div class="flex items-center justify-between gap-2">
                      <a href="/rules/<%= home._id %>" 
                         class="inline-flex items-center px-2 py-1 bg-blue-500 hover:bg-blue-600 text-white text-xs rounded transition-colors">
                          <i class="fas fa-file-pdf mr-1"></i>
                          Rules
                      </a>
                      <div class="flex-1">
                          <%- include('../partials/favourite') %>
                      </div>
                  </div>
              </div>
          </div>
      </main>
  </body>
</html>